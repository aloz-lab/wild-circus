{% extends 'base.html.twig' %}

{% block title %}Show{% endblock %}

{% block body %}
    <div class="container-fluid bg-dark">
        <div class="mt-4 col-sm-12 col-md-12">
            <div class="card bg-dark border-warning">
                <div class="row no-gutters">
                    <div class="col-sm-12 col-md-5">
                        <img class="card-img-top border border-warning" src="{{show.picture}}" alt="{{ show.title }} poster">
                    </div>
                    <div class="col-sm-10 col-md-7">
                        <div class="card-body">
                            <div class="card-body bg-dark text-white">
                                <h2 class="card-title">{{ show.title }}</h2>
                                <a href="{{ path('show_index') }}">Back to all shows</a>
                                <p class="card-text mt-4"><strong>Summary :</strong></p>
                                <p class="card-text">{{ show.summary }}</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item bg-dark text-white"><strong>Date : </strong>{{ show.showDate ? show.showDate|date('Y-m-d') : '' }}</li>
                                <li class="list-group-item bg-dark text-white"><strong>Prices</strong></li>
                            </ul>
                            <p class="card-text bg-dark text-white ml-5"><strong>Adult : </strong>{{ show.adultPrice }} €</p>
                            <p class="card-text bg-dark text-white ml-5"><strong>Child : </strong>{{ show.childPrice }} €</p>
                            <p class="card-text bg-dark text-white ml-5"><strong>Group : </strong>{{ show.groupPrice }} €</p>
                        </div>
                        <div class="card-body">
                            <div class="card-body bg-dark text-white">
                                <h4 class="mb-4">Artists :</h4>
                                {% for artist in show.artists %}
                                    <div>
                                        <a href="{{ path('artist_show', { 'id': artist.id }) }}">{{ artist.name }}
                                    </div>
                                    <br>
                                {% else %}
                                    No artist found.
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('show_edit', {'id': show.id}) }}" class="btn btn-warning btn-lg active" role="button" aria-pressed="true">Edit</a>
                    <a href="{{ path('show_delete', {'id': show.id}) }}" class="btn btn-warning btn-lg active" role="button" aria-pressed="true">Delete</a>
                {% endif %}
            </div>
        </div>
    </div>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <h2>Comments</h2>
        <br>
        <h3>Add a comment</h3>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-warning">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
        {#{{ include('comment/_form.html.twig') }}#}
    {% endif %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <ul>
        {% for comment in show.comments %}
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ comment.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ comment.comment }}</td>
                </tr>
                <tr>
                    <th>Rate</th>
                    <td>{{ comment.rate }}</td>
                </tr>
                <tr>
                    <th>Auteur</th>
                    <td>{{ comment.author }}</td>
                </tr>
                </tbody>
            </table>
            {% if app.user.email == comment.author or is_granted('ROLE_ADMIN')%}
                <a class="btn btn-warning" href="{{ path('comment_edit', {'id': comment.id}) }}">Edit</a>
                <br>
                {{ include('comment/_delete_form.html.twig') }}
            {% endif %}
            <br>
        {% else %}
            <li>No comment</li>
        {% endfor %}
    </ul>
    {% endif %}


    <h1>Show</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ show.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ show.title }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ show.picture }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ show.summary }}</td>
            </tr>
            <tr>
                <th>Show_date</th>
                <td>{{ show.showDate ? show.showDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Adult_price</th>
                <td>{{ show.adultPrice }}</td>
            </tr>
            <tr>
                <th>Child_price</th>
                <td>{{ show.childPrice }}</td>
            </tr>
            <tr>
                <th>Group_price</th>
                <td>{{ show.groupPrice }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('show_index') }}">back to list</a>

    <a href="{{ path('show_edit', {'id': show.id}) }}">edit</a>

    {{ include('show/_delete_form.html.twig') }}
{% endblock %}
