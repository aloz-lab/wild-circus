{% extends 'base.html.twig' %}

{% block title %}Show{% endblock %}

{% block body %}
    <div class="container-fluid bg-dark">
        <div class="mt-4 col-sm-12 col-md-12">
            <div class="card bg-dark border-warning">
                <div class="row no-gutters">
                    <div class="col-sm-12 col-md-5">
                        <img class="card-img-top mt-5 ml-3" src="{{show.picture}}" alt="{{ show.title }} poster">
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('show_edit', {'id': show.id}) }}" class="btn btn-warning mt-5 ml-4" role="button" aria-pressed="true">Edit</a>
                            {{ include('show/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                    <div class="col-sm-10 col-md-7">
                        <div class="card-body">
                            <div class="card-body bg-dark text-warning">
                                <h2 class="card-title">{{ show.title }}</h2>
                                <a href="{{ path('show_index') }}">Back to all shows</a>
                                <p class="card-text mt-4"><strong>Summary :</strong></p>
                                <p class="card-text">{{ show.summary }}</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item bg-dark text-warning"><strong>Date : </strong>{{ show.showDate ? show.showDate|date('Y-m-d') : '' }}</li>
                                <li class="list-group-item bg-dark text-warning"><strong>Prices</strong></li>
                            </ul>
                            <p class="card-text bg-dark text-white ml-5 text-warning">Adult : {{ show.adultPrice }} €</p>
                            <p class="card-text bg-dark text-white ml-5 text-warning">Child : {{ show.childPrice }} €</p>
                            <p class="card-text bg-dark text-white ml-5 text-warning">Group : {{ show.groupPrice }} €</p>
                        </div>
                        <div class="card-body">
                            <div class="card-body bg-dark text-warning">
                                <h4 class="mb-4">Artists :</h4>
                                {% for artist in show.artists %}
                                    <div>
                                        <a href="{{ path('artist_show', { 'id': artist.id }) }}">{{ artist.name }}</a>
                                    </div>
                                    <br>
                                {% else %}
                                    No artist found.
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

<div class="container-fluid bg-dark">
    <div class="mt-4 col-sm-12 col-md-6">
        <div class="card bg-dark">
            <div class="contact-card card">
                <div class="container px-4">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <h3 class="mt-3">Comments</h3>
                        <br>
                        <h4>Add a comment</h4>
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-dark text-warning mb-3">{{ button_label|default('Save') }}</button>
                        {{ form_end(form) }}
                        {#{{ include('comment/_form.html.twig') }}#}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid bg-dark">
    <div class="mt-5 col-sm-12 col-md-6">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <ul>
                {% for comment in show.comments %}
                    <table class="table">
                        <tbody>
                        <tr class="text-warning">
                            <th>Comment # {{ comment.id }}</th>
                            <td></td>
                        </tr>
                        <tr class="text-warning">
                            <th>Comment</th>
                            <td>{{ comment.comment }}</td>
                        </tr>
                        <tr class="text-warning">
                            <th>Rate</th>
                            <td>{{ comment.rate }}</td>
                        </tr>
                        <tr class="text-warning">
                            <th>Author</th>
                            <td>{{ comment.author }}</td>
                        </tr>
                        </tbody>
                    </table>
                    {% if app.user.email == comment.author or is_granted('ROLE_ADMIN')%}
                        <a class="btn btn-warning mb-2" href="{{ path('comment_edit', {'id': comment.id}) }}">Edit</a>
                        {{ include('comment/_delete_form.html.twig') }}
                    {% endif %}
                    <br>
                {% else %}
                    <li class="text-warning mb-3">No comment</li>
                {% endfor %}
            </ul>
            {% endif %}
    </div>
</div>

{% endblock %}
