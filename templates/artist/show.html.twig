{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <div class="container bg-dark">
        <div class="mt-4 col-sm-12 col-md-12">
            <div class="card bg-dark border-warning">
                <div class="row no-gutters">
                    <div class="col-sm-12 col-md-5">
                        <img class="card-img-top border border-warning" src="{{artist.picture}}" alt="{{ artist.name }} poster">
                    </div>
                    <div class="col-sm-10 col-md-7">
                        <div class="card-body">
                            <div class="card-body bg-dark text-white">
                                <h2 class="card-title">{{ artist.name }}</h2>
                                <a href="{{ path('artist_index') }}">Back to all artists</a>
                                <p class="card-text mt-4"><strong>Presentation :</strong></p>
                                <p class="card-text">{{ artist.presentation }}</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="card-body bg-dark text-white">
                                <h4 class="mb-4">Shows :</h4>
                                {% for show in artist.shows %}
                                    <div>
                                        <a href="{{ path('show_show', { 'id': show.id }) }}">{{ show.title }}
                                    </div>
                                    <br>
                                {% else %}
                                    No show found.
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('show_edit', {'id': show.id}) }}" class="btn btn-warning btn-lg active" role="button" aria-pressed="true">Edit</a>
                    <a href="{{ path('show_delete', {'id': show.id}) }}" class="btn btn-warning btn-lg active" role="button" aria-pressed="true">Delete</a>
                {% endif %}
            </div>
        </div>
    </div>




    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ artist.picture }}</td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ artist.presentation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('artist_index') }}">back to list</a>

    <a href="{{ path('artist_edit', {'id': artist.id}) }}">edit</a>

    {{ include('artist/_delete_form.html.twig') }}
{% endblock %}
