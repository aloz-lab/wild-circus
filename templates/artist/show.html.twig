{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <div class="container bg-dark">
        <div class="mt-4 col-sm-12 col-md-12">
            <div class="card bg-dark border-warning mb-4">
                <div class="row no-gutters">
                    <div class="col-sm-12 col-md-5">
                        <img class="card-img-top mt-5 ml-3" src="{{artist.picture}}" alt="{{ artist.name }} poster">
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('artist_edit', {'id': artist.id}) }}" class="btn btn-warning ml-4 my-5" role="button" aria-pressed="true">Edit</a>
                            {{ include('artist/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                    <div class="col-sm-10 col-md-7">
                        <div class="card-body">
                            <div class="card-body bg-dark text-warning">
                                <h2 class="card-title">{{ artist.name }}</h2>
                                <a href="{{ path('artist_index') }}">Back to all artists</a>
                                <p class="card-text mt-4"><strong>Presentation :</strong></p>
                                <p class="card-text">{{ artist.presentation }}</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="card-body bg-dark text-warning">
                                <h4 class="mb-4">Shows :</h4>
                                {% for show in artist.shows %}
                                    <div>
                                        <a href="{{ path('show_show', { 'id': show.id }) }}">{{ show.title }}
                                    </div>
                                    <br>
                                {% else %}
                                    No show found.
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
